<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme -->
    <style name="Theme.BloodLink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#D32F2F</item> <!-- Red -->
        <item name="colorPrimaryVariant">#B71C1C</item>
        <item name="colorOnPrimary">#000000</item> <!-- Black text on red -->

        <!-- Remove forced background -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <!-- Custom TextView style to avoid white bg -->
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>